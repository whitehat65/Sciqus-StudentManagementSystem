    <script>
        $(document).ready(function(){
            $.ajax({
                url: '/fetchAllStudents',
                method: 'GET',
                dataType: 'json',
                success: function(data) {
                    //console.log(data);
                    
                    var table = $('#studentsTable');
                    var i=1;
                    data.data.forEach(function (student) {
                        
                        var row = $('<tr>');

                        row.append($('<td>').text(i));
                        row.append($('<td>').text(student.fname));
                        row.append($('<td>').text(student.lname));
                        row.append($('<td>').text(student.email));
                        row.append($('<td>').text(student.mobile));

                        var updateButton = $('<button>')
                            .attr('id', 'updateButton_' + student.id)
                            .addClass('btn btn-success btn-sm update-button')
                            .html('<i class="fas fa-edit"></i>');

                        var deleteButton = $('<button>')
                            .attr('id', 'deleteButton_' + student.id)
                            .addClass('btn btn-danger btn-sm delete-button')
                            .html('<i class="fas fa-trash-alt"></i>');

                        
                        row.append($('<td>').append(updateButton));
                        row.append($('<td>').append(deleteButton));

                        table.append(row);
                        i++;
                    });
                },
                error: function(error) {
                    console.error('Error fetching data:', error);
                }
            });
        });
    </script>

    <script>
        $(document).ready(function(){
            $(document).on('click', '.update-button', function(){
                var studentId = $(this).attr('id').split('_')[1];
                $.ajax({
                    url: '/fetchStudentDetails/' + studentId,
                    method: 'GET',
                    dataType: 'json',
                    success: function(response) {
                        console.log(response.data);
                        var student=response.data[0];
                        $("#username").val(student.username);
                        $("#Id").val(student.id);
                        $('#email').val(student.email);
                        $('#fname').val(student.fname);
                        $('#lname').val(student.lname);
                        $('#mobile').val(student.mobile);
                        $('#dob').val(student.dob);
                        $('#address').val(student.address);
                        $('#country').val(student.country);
                        $('#education').val(student.education);
                        $('#percentage').val(student.percentage);

                        $('.modal-title').text("Update Student");
                        $('#updateModal').modal('show');
                        
                    },
                    error: function(error) {
                        console.error('Error fetching student details:', error);
                    }
                });
            });
            $(document).on('click', '.delete-button', function () {
                var studentId = $(this).attr('id').split('_')[1];
            
                $('#deleteModal').modal('show');
            
                $('#confirmDeleteButton').on('click', function () {
                    $.ajax({
                        url: '/deleteStudent/' + studentId,
                        method: 'GET',
                        success: function (response) {
                            window.location.href = '/viewStudents';
                        },
                        error: function (error) {
                            console.error('Error deleting student:', error);
                            
                        }
                    });
            
                    // Close the confirmation modal
                    $('#deleteModal').modal('hide');
                });
            });            
        });
    </script>
    <script>
